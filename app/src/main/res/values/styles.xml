<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="tvDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tvPlacarStyle" parent="tvDefault">
        <item name="android:textSize">40sp</item>
        <item name="android:text">@string/placarInicial</item>
    </style>

    <style name="tvTimeStyle" parent="tvDefault">

    </style>

    <style name="tvGolStyle" parent="tvDefault">
        <item name="android:text">@string/golButton</item>
    </style>

</resources>
